global
        daemon
        log stdout format raw daemon

defaults
        log global
        mode tcp
        option tcplog

        option dontlognull
        #maxconn 2000
        timeout connect 24h
        timeout client 24h
        timeout server 24h

frontend ssl
        mode tcp
        bind *:443 ssl crt /etc/letsencrypt/haproxy.pem
        tcp-request inspect-delay 5s

	{{#each protocols}}
        use_backend {{name}} if { ssl_fc_sni -i {{server.address}} }
	{{/each}}
        default_backend nginx

{{#each protocols}}
backend {{name}}
	mode tcp
	server {{name}} {{name}}:{{server.port}}
{{/each}}

backend nginx
        mode tcp
        server nginx nginx:80